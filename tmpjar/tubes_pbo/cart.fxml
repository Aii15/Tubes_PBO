<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tubes_pbo.CartController">
    <top>
        <HBox spacing="10" styleClass="header">
            <children>
                <Label text="Your Cart" styleClass="logo" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="backButton" text="Back" />
            </children>
            <padding>
                <Insets top="8" bottom="8" left="12" right="12" />
            </padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="12">
            <children>
                <ScrollPane fitToWidth="true">
                    <content>
                        <VBox fx:id="itemsBox" spacing="10">
                            <padding>
                                <Insets top="12" bottom="12" left="12" right="12" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>

                <HBox alignment="CENTER">
                    <children>
                        <Button fx:id="buyNowButton" text="Buy Now" styleClass="cta-button" />
                    </children>
                    <padding>
                        <Insets top="8" bottom="12" left="12" right="12" />
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets left="8" right="8" />
            </padding>
        </VBox>
    </center>
</BorderPane>
